@model UiAppLayer.Models.AuditRequest

@{
    ViewData["Title"] = "Create Audit Request";
}

<h2 class="mb-4">Create Audit Request</h2>

<form asp-action="Create" method="post" class="shadow p-4 bg-light rounded">
    <input asp-for="AuditRequestId" type="hidden" value="0" />

    <div class="form-group mb-3">
        <label asp-for="EmployeeId" class="form-label">Employee ID</label>
        <input asp-for="EmployeeId" class="form-control" />
        <span asp-validation-for="EmployeeId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="AssetId" class="form-label">Asset ID</label>
        <input asp-for="AssetId" class="form-control" />
        <span asp-validation-for="AssetId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Submit Request</button>
    <a asp-route="AuditRequestList" class="btn btn-secondary ms-2">Cancel</a>
</form>

