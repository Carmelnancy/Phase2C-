@model UiAppLayer.Models.EmployeeDetailsViewModel

@{
    ViewData["Title"] = "Employee Details";
}

<h2>Employee Details</h2>

<table class="table table-bordered">
    <tr>
        <th>Employee ID</th>
        <td>@Model.Employee.EmployeeId</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.Employee.Name</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>@Model.Employee.Email</td>
    </tr>
    <tr>
        <th>Gender</th>
        <td>@Model.Employee.Gender</td>
    </tr>
    <tr>
        <th>Contact Number</th>
        <td>@Model.Employee.ContactNumber</td>
    </tr>
    <tr>
        <th>Address</th>
        <td>@Model.Employee.Address</td>
    </tr>
</table>

<hr />
<h4>Assigned Assets</h4>

@if (Model.Assets != null && Model.Assets.Any())
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Asset No</th>
                <th>Asset Name</th>
                <th>Category</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var asset in Model.Assets)
            {
                <tr>
                    <td>@asset.AssetNo</td>
                    <td>@asset.AssetName</td>
                    <td>@asset.CategoryId</td>
                    <td>@asset.Status</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">No assets assigned to this employee.</p>
}

<a asp-route="EmployeeList" class="btn btn-secondary mt-3">Back to List</a>
