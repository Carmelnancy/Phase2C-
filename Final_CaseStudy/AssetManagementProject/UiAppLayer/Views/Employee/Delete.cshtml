@model UiAppLayer.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<h2>Confirm Delete</h2>

<h4>Are you sure you want to delete this employee?</h4>

<table class="table table-bordered">
    <tr>
        <th>Name</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <th>Contact</th>
        <td>@Model.ContactNumber</td>
    </tr>
</table>

<form method="post" asp-route="EmployeeDelete" asp-route-id="@Model.EmployeeId">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-route="EmployeeList" class="btn btn-secondary">Cancel</a>
</form>

