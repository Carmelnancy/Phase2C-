@model UiAppLayer.Models.AssetCategory
@{
    ViewData["Title"] = "Delete Category";
}

<h2>Delete Asset Category</h2>

<h4>Are you sure you want to delete this category?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-3">Category ID</dt>
        <dd class="col-sm-9">@Model.CategoryId</dd>

        <dt class="col-sm-3">Category Name</dt>
        <dd class="col-sm-9">@Model.CategoryName</dd>
    </dl>
</div>

@* <form asp-action="DeleteConfirmed" method="post"> *@
<form asp-route="AssetCategoryDeleteConfirmed" asp-route-id="@Model.CategoryId" method="post">

    <input type="hidden" asp-for="CategoryId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
