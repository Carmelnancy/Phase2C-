
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <style>
        th.table-header {
            background-color: #f3e0ef !important;
            color: #000 !important;
        }
    </style>
</head>
<body style="background-color: #e6e6fa;">
    @{
        var token = Context.Session.GetString("JWToken");
    }

    @* @if (!string.IsNullOrEmpty(token)) *@
    @* { *@
    @*     <p class="text-muted text-end me-3"> Token exists: @(token.Substring(0, 20))...</p> *@
    @* } *@
    @* else *@
    @* { *@
    @*     <p class="text-danger text-end me-3"> No token in session!</p> *@
    @* } *@

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-4">
        <a class="navbar-brand" asp-controller="Admin" asp-action="Dashboard">Asset Management</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Dashboard">Dashboard</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Employee" asp-action="List">Employees</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="AssetCategory" asp-action="Index">Asset Categories</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Asset" asp-action="Index">Assets</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="AssetRequest" asp-action="List">Asset Requests</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="ServiceRequest" asp-action="Index">Service Requests</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="AuditRequest" asp-action="Index">Audit Requests</a></li>
                <li class="nav-item"><a class="nav-link text-danger" asp-controller="Admin" asp-action="Logout">Logout</a></li>
            </ul>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>
