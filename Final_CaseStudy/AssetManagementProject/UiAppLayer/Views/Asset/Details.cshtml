@model UiAppLayer.Models.Asset

@{
    ViewData["Title"] = "Asset Details";
}

<h2>Asset Details</h2>

<table class="table table-bordered">
    <tr><th>Asset ID</th><td>@Model.AssetId</td></tr>
    <tr><th>Asset No</th><td>@Model.AssetNo</td></tr>
    <tr><th>Name</th><td>@Model.AssetName</td></tr>
    <tr><th>Model</th><td>@Model.AssetModel</td></tr>
    <tr><th>Manufacturing Date</th><td>@Model.ManufacturingDate.ToString("dd MMM yyyy")</td></tr>
    <tr><th>Expiry Date</th><td>@Model.ExpiryDate.ToString("dd MMM yyyy")</td></tr>
    <tr><th>Value</th><td>@Model.AssetValue</td></tr>
    <tr><th>Status</th><td>@Model.Status</td></tr>
    <tr><th>Category ID</th><td>@Model.CategoryId</td></tr>
    <tr><th>Employee ID</th><td>@Model.EmployeeId</td></tr>
    <tr><th>Quantity</th><td>@Model.Quantity</td></tr>
</table>

<a asp-route="AssetIndex" class="btn btn-secondary">Back to List</a>
