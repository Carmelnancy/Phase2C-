@model UiAppLayer.Models.Asset

@{
    ViewData["Title"] = "Delete Asset";

}

<div class="row justify-content-center mt-5">
    <div class="col-md-8">
        <div class="card shadow border-danger">
            <div class="card-body">
                <h3 class="text-danger text-center mb-4">Confirm Deletion</h3>

                <p class="text-center text-muted">Are you sure you want to delete the following asset?</p>
                <hr />

                <dl class="row mb-4">
                    <dt class="col-sm-4">Asset No</dt>
                    <dd class="col-sm-8">@Model.AssetNo</dd>

                    <dt class="col-sm-4">Asset Name</dt>
                    <dd class="col-sm-8">@Model.AssetName</dd>

                    <dt class="col-sm-4">Asset Model</dt>
                    <dd class="col-sm-8">@Model.AssetModel</dd>

                    <dt class="col-sm-4">Category ID</dt>
                    <dd class="col-sm-8">@Model.CategoryId</dd>
                </dl>

                <form asp-route="AssetDeleteConfirmed" asp-route-id="@Model.AssetId" method="post">
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                        <a asp-route="AssetIndex" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
 </di>
